{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "d": "npm run dx && npm run dev",
    "dx": "npm install && npm run dx:up && npm run db:migrate && npm run db:seed",
    "dx:up": "docker compose -f ./docker-compose.dev.yaml up -d",
    "dx:down": "docker compose -f ./docker-compose.dev.yaml down",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "test:unit": "vitest --watch=false",
    "test:unit:coverage": "vitest --watch=false --coverage",
    "test:unit:watch": "vitest --watch=true",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:drop": "drizzle-kit drop",
    "db:migrate": "drizzle-kit migrate",
    "db:deploy": "drizzle-kit push --verbose --strict",
    "db:seed": "npx tsx --env-file=./.env ./database/seed",
    "db:check": "drizzle-kit check"
  },
  "lint-staged": {
    "**/*.{js,jsx,cjs,mjs,json,ts,tsx,html,css,json,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,ts}": "vitest related --run",
    "*.{vue,js,ts}": "npx playwright test tests/e2e"
  },
  "dependencies": {
    "@iconify-json/simple-icons": "^1.2.4",
    "@libsql/client": "^0.10.0",
    "@nuxt/content": "^2.13.2",
    "@nuxt/eslint": "^0.5.7",
    "@nuxt/fonts": "^0.9.2",
    "@nuxt/image": "^1.8.0",
    "@nuxt/ui": "^2.18.6",
    "@nuxthub/core": "^0.8.10",
    "@paralleldrive/cuid2": "^2.2.2",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue-email/components": "^0.0.19",
    "@vue-email/render": "^0.0.9",
    "@vueuse/integrations": "^11.1.0",
    "@vueuse/router": "^11.2.0",
    "drizzle-orm": "^0.34.0",
    "emailjs": "^4.0.3",
    "nanoid": "^5.0.7",
    "nuxt": "^3.13.0",
    "nuxt-auth-utils": "^0.4.2",
    "qrcode": "^1.5.4",
    "validator": "^13.12.0",
    "vue": "latest",
    "vue-router": "^4.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nuxt/test-utils": "^3.14.2",
    "@playwright/test": "^1.47.2",
    "@types/validator": "^13.12.2",
    "@vitest/coverage-v8": "^2.1.1",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/components": "^12.1.0",
    "@vueuse/core": "^11.2.0",
    "@vueuse/nuxt": "^11.2.0",
    "drizzle-kit": "^0.25.0",
    "happy-dom": "^15.7.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "playwright-core": "^1.47.2",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "vue-tsc": "^2.1.6"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
