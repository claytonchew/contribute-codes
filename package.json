{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "test:unit": "vitest --watch=false",
    "test:unit:coverage": "vitest --watch=false --coverage",
    "test:unit:watch": "vitest --watch=true",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "db:generate": "drizzle-kit generate",
    "db:deploy": "drizzle-kit push"
  },
  "lint-staged": {
    "**/*.{js,jsx,cjs,mjs,json,ts,tsx,html,css,json,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,ts}": "vitest related --run",
    "*.{vue,js,ts}": "npx playwright test tests/e2e"
  },
  "dependencies": {
    "@iconify-json/simple-icons": "^1.2.4",
    "@libsql/client": "^0.10.0",
    "@nuxt/content": "^2.13.2",
    "@nuxt/eslint": "^0.5.7",
    "@nuxt/fonts": "^0.9.2",
    "@nuxt/image": "^1.8.0",
    "@nuxt/ui": "^2.18.5",
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.33.0",
    "emailjs": "^4.0.3",
    "nuxt": "^3.13.0",
    "nuxt-auth-utils": "^0.3.9",
    "vue": "latest",
    "vue-router": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nuxt/test-utils": "^3.14.2",
    "@playwright/test": "^1.47.2",
    "@vue/test-utils": "^2.4.6",
    "drizzle-kit": "^0.24.2",
    "happy-dom": "^15.7.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "playwright-core": "^1.47.2",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "vue-tsc": "^2.1.6"
  }
}
